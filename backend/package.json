{
  "name": "emotio-x-backend",
  "version": "1.0.0",
  "description": "Backend para EmotioX con Serverless Framework",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf .serverless",
    "deploy:dev": "serverless deploy --stage dev",
    "postdeploy:dev": "node ./scripts/fix-endpoints.js && node ./scripts/update-frontend-config.js",
    "deploy:prod": "serverless deploy --stage prod",
    "postdeploy:prod": "node ./scripts/fix-endpoints.js && node ./scripts/update-frontend-config.js",
    "check-requirements": "node ./scripts/check-requirements.js",
    "fix-endpoints": "node ./scripts/fix-endpoints.js",
    "update-frontend": "node ./scripts/update-frontend-config.js",
    "test-api": "node ./scripts/test-api.js",
    "start:offline": "serverless offline start --stage dev",
    "lint": "eslint 'src/**/*.ts'",
    "test": "jest",
    "package": "serverless package --stage dev",
    "logs": "serverless logs --function",
    "remove": "serverless remove --stage dev",
    "local": "serverless invoke local --function"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.758.0",
    "@aws-sdk/client-dynamodb": "^3.751.0",
    "@aws-sdk/lib-dynamodb": "^3.767.0",
    "@emotiox/shared": "file:../shared",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.131",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "axios": "^1.8.4",
    "dotenv": "^16.4.7",
    "rimraf": "^5.0.5",
    "serverless": "^3.38.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-export-outputs": "^1.0.2",
    "serverless-offline": "^13.3.2",
    "serverless-plugin-export-endpoints": "^0.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
