{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend para sistema de autenticación con email y contraseña",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "dev": "serverless offline",
    "deploy": "npm run clean && npm run build && serverless deploy && npm run postdeploy",
    "deploy:dev": "npm run clean && npm run build && serverless deploy --stage dev && npm run postdeploy:dev",
    "deploy:test": "npm run clean && npm run build && serverless deploy --stage test && npm run postdeploy:test",
    "deploy:prod": "npm run clean && npm run build && serverless deploy --stage prod && npm run postdeploy:prod",
    "postdeploy": "node ../scripts/auto-update-api-config.js dev",
    "postdeploy:dev": "node ../scripts/auto-update-api-config.js dev",
    "postdeploy:test": "node ../scripts/auto-update-api-config.js test",
    "postdeploy:prod": "node ../scripts/auto-update-api-config.js prod",
    "deploy:endpoints": "serverless exportEndpoints && node scripts/update-frontend-endpoints.js",
    "logs:dev": "serverless logs --stage dev",
    "logs:test": "serverless logs --stage test",
    "logs:prod": "serverless logs --stage prod",
    "test:research-api": "node scripts/test-research-api.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.758.0",
    "@aws-sdk/client-dynamodb": "^3.751.0",
    "@aws-sdk/lib-dynamodb": "^3.767.0",
    "@emotiox/shared": "file:../shared",
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^10.0.0",
    "aws-lambda": "^1.0.7",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "ws": "^8.18.1",
    "zod": "^3.22.4",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.13.5",
    "aws-sdk": "^2.1.1",
    "axios": "^1.8.3",
    "rimraf": "^6.0.1",
    "serverless": "^3.40.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-dynamodb-local": "^0.2.40",
    "serverless-export-outputs": "^1.0.2",
    "serverless-offline": "^11.6.0",
    "serverless-plugin-typescript": "^2.1.5",
    "typescript": "^5.6.2"
  }
}
