{
  "name": "emotioxv2-backend",
  "version": "0.1.0",
  "description": "Backend para la aplicaciÃ³n EmotioXV2",
  "main": "src/index.ts",
  "scripts": {
    "dev": "serverless offline start --httpPort 3000 --lambdaPort 3002 --websocketPort 3001",
    "build": "esbuild src/index.ts --platform=node --target=node18 --bundle --outfile=dist/index.js --minify --tree-shaking",
    "build:analyze": "esbuild src/index.ts --platform=node --target=node18 --bundle --outfile=dist/index.js --analyze",
    "start": "node dist/server.local.js",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy": "npm run build && serverless deploy && npm run postdeploy",
    "deploy:dev": "rm -rf dist && npm run build && serverless deploy --stage dev && npm run postdeploy:dev",
    "deploy:prod": "rm -rf dist && npm run build && serverless deploy --stage prod && npm run postdeploy:prod",
    "postdeploy": "STAGE=dev ./scripts/post-deploy-sync.sh",
    "postdeploy:dev": "STAGE=dev ./scripts/post-deploy-sync.sh",
    "postdeploy:prod": "STAGE=prod ./scripts/post-deploy-sync.sh",
    "export-endpoints": "ts-node src/utils/endpoints-exporter.ts ../frontend/src/api/endpoints.js",
    "setup:aws": "./scripts/setup-aws.sh",
    "setup:db": "ts-node src/utils/dynamodb-setup.ts",
    "build:setup": "esbuild src/utils/dynamodb-setup.ts --platform=node --target=node18 --bundle --outfile=dist/utils/dynamodb-setup.js",
    "info": "serverless info",
    "logs": "serverless logs -f api -t",
    "remove": "serverless remove",
    "migrate-question-keys": "node scripts/migrate-question-keys.js",
    "verify-question-keys": "node scripts/verify-question-keys.js"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.190.0",
    "@aws-sdk/client-dynamodb": "^3.190.0",
    "@aws-sdk/client-s3": "^3.190.0",
    "@aws-sdk/client-ses": "^3.190.0",
    "@aws-sdk/lib-dynamodb": "^3.190.0",
    "@aws-sdk/s3-request-presigner": "^3.190.0",
    "argon2": "^0.41.1",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.3",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.6.0",
    "uuid": "^9.0.1",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.148",
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^29.1.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^18.19.84",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.19.5",
    "eslint": "^8.25.0",
    "jest": "^29.1.2",
    "serverless": "^3.23.0",
    "serverless-dotenv-plugin": "^4.0.2",
    "serverless-esbuild": "^1.46.0",
    "serverless-export-outputs": "^1.0.2",
    "serverless-offline": "^11.1.3",
    "serverless-plugin-export-endpoints": "^0.1.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "author": "",
  "license": "ISC"
}
