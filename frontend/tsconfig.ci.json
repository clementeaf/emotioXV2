{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types", "./src/types"],
    "types": []
  },
  "include": [
    "next-env.d.ts",
    "types/**/*.d.ts",
    "src/types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../shared/interfaces/**/*.ts"
  ]
}
