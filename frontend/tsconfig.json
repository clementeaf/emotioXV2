{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@shared/*": [
        "../shared/*"
      ],
      "shared/*": [
        "../shared/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "external-modules.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../shared/interfaces/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./external-modules.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
