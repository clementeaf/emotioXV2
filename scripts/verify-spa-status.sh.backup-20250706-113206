#!/bin/bash

# ğŸ” EmotioXV2 - VerificaciÃ³n Final SPA
# Script para verificar el estado del deployment y navegaciÃ³n SPA

set -e

# Colores para output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

# Funciones de logging
log_info() { echo -e "${BLUE}[INFO]${NC} $1"; }
log_success() { echo -e "${GREEN}[SUCCESS]${NC} $1"; }
log_warning() { echo -e "${YELLOW}[WARNING]${NC} $1"; }
log_error() { echo -e "${RED}[ERROR]${NC} $1"; }

# ConfiguraciÃ³n
CLOUDFRONT_DIST_ID="E3MCIWNMF6ES2R"
CLOUDFRONT_URL="https://d2s9nr0bm47yl1.cloudfront.net"
BUCKET_NAME="emotioxv2-frontend-bucket"

main() {
    echo ""
    log_info "ğŸ” Verificando estado del deployment SPA..."
    echo ""

    # Verificar estado de CloudFront
    check_cloudfront_status

    # Verificar configuraciÃ³n SPA
    check_spa_config

    # Probar navegaciÃ³n
    test_navigation

    # Mostrar resumen
    show_summary

    echo ""
    log_info "âœ… VerificaciÃ³n completada!"
    echo ""
}

check_cloudfront_status() {
    log_info "Verificando estado de CloudFront..."

    STATUS=$(aws cloudfront get-distribution --id "$CLOUDFRONT_DIST_ID" --query "Distribution.Status" --output text)
    
    case $STATUS in
        "Deployed")
            log_success "CloudFront Distribution: Deployed âœ“"
            ;;
        "InProgress")
            log_warning "CloudFront Distribution: InProgress (propagÃ¡ndose)"
            log_info "Los cambios pueden tardar hasta 15 minutos en completarse"
            ;;
        *)
            log_error "CloudFront Distribution: Estado desconocido ($STATUS)"
            ;;
    esac

    # Verificar si estÃ¡ habilitada
    ENABLED=$(aws cloudfront get-distribution --id "$CLOUDFRONT_DIST_ID" --query "Distribution.DistributionConfig.Enabled")
    if [ "$ENABLED" = "true" ]; then
        log_success "CloudFront Distribution: Habilitada âœ“"
    else
        log_error "CloudFront Distribution: Deshabilitada âœ—"
    fi
}

check_spa_config() {
    log_info "Verificando configuraciÃ³n SPA..."

    # Verificar Custom Error Responses
    ERROR_RESPONSES=$(aws cloudfront get-distribution --id "$CLOUDFRONT_DIST_ID" \
        --query "Distribution.DistributionConfig.CustomErrorResponses")
    
    ERROR_COUNT=$(echo "$ERROR_RESPONSES" | jq '.Quantity')
    
    if [ "$ERROR_COUNT" -eq 2 ]; then
        log_success "Custom Error Responses: Configurados correctamente âœ“"
        
        # Verificar que los cÃ³digos sean 403 y 404
        CODES=$(echo "$ERROR_RESPONSES" | jq -r '.Items[].ErrorCode' | sort | tr '\n' ' ')
        if [ "$CODES" = "403 404 " ]; then
            log_success "Error Codes: 403 y 404 configurados âœ“"
        else
            log_warning "Error Codes: $CODES (esperados: 403 404)"
        fi
    else
        log_warning "Custom Error Responses: $ERROR_COUNT encontrados (esperados: 2)"
    fi

    # Verificar Default Root Object
    ROOT_OBJECT=$(aws cloudfront get-distribution --id "$CLOUDFRONT_DIST_ID" \
        --query "Distribution.DistributionConfig.DefaultRootObject" --output text)
    
    if [ "$ROOT_OBJECT" = "index.html" ]; then
        log_success "Default Root Object: index.html âœ“"
    else
        log_warning "Default Root Object: $ROOT_OBJECT (esperado: index.html)"
    fi
}

test_navigation() {
    log_info "Probando navegaciÃ³n SPA..."

    # Lista de rutas crÃ­ticas para probar
    ROUTES=(
        ""                    # PÃ¡gina principal
        "dashboard/"          # Dashboard
        "login/"              # Login
        "register/"           # Register
        "research/"           # Research list
        "research/test-123/"  # Research dinÃ¡mico
        "profile/"            # Profile
        "clients/"            # Clients
    )

    echo ""
    log_info "ğŸ§ª Resultados de navegaciÃ³n:"
    
    PASSED=0
    TOTAL=${#ROUTES[@]}
    
    for route in "${ROUTES[@]}"; do
        url="$CLOUDFRONT_URL/$route"
        
        # Hacer request con timeout
        status=$(curl -s -o /dev/null -w "%{http_code}" --max-time 10 "$url")
        response_time=$(curl -s -o /dev/null -w "%{time_total}" --max-time 10 "$url")
        
        if [ "$status" = "200" ]; then
            log_success "âœ“ /$route -> $status (${response_time}s)"
            ((PASSED++))
        else
            log_warning "âš  /$route -> $status (${response_time}s)"
        fi
    done
    
    echo ""
    log_info "ğŸ“Š Resumen de pruebas: $PASSED/$TOTAL rutas exitosas"
    
    if [ $PASSED -eq $TOTAL ]; then
        log_success "ğŸ‰ Todas las rutas funcionan correctamente!"
    elif [ $PASSED -gt $((TOTAL/2)) ]; then
        log_warning "âš ï¸  La mayorÃ­a de rutas funcionan, puede haber propagaciÃ³n pendiente"
    else
        log_error "âŒ MÃºltiples rutas con problemas"
    fi
}

show_summary() {
    echo ""
    log_info "ğŸ“‹ Resumen del Estado Actual:"
    echo "  ğŸŒ CloudFront URL: $CLOUDFRONT_URL"
    echo "  ğŸ†” Distribution ID: $CLOUDFRONT_DIST_ID"
    echo "  ğŸª£ S3 Bucket: $BUCKET_NAME"
    echo ""
    
    log_info "ğŸ”— URLs principales para verificar:"
    echo "  ğŸ  Inicio: $CLOUDFRONT_URL/"
    echo "  ğŸ“Š Dashboard: $CLOUDFRONT_URL/dashboard/"
    echo "  ğŸ” Login: $CLOUDFRONT_URL/login/"
    echo "  ğŸ”¬ Research: $CLOUDFRONT_URL/research/"
    echo ""
    
    log_info "ğŸ§ª Comandos de verificaciÃ³n manual:"
    echo "  # Probar acceso directo a rutas SPA:"
    echo "  curl -I $CLOUDFRONT_URL/dashboard/"
    echo "  curl -I $CLOUDFRONT_URL/research/123/"
    echo ""
    echo "  # Verificar que devuelve 200 en lugar de 404:"
    echo "  curl -s -o /dev/null -w 'Status: %{http_code}\\n' $CLOUDFRONT_URL/ruta-inexistente/"
    echo ""
    
    # Verificar si hay invalidaciones en progreso
    INVALIDATIONS=$(aws cloudfront list-invalidations --distribution-id "$CLOUDFRONT_DIST_ID" \
        --query "InvalidationList.Items[?Status=='InProgress'].Id" --output text)
    
    if [ -n "$INVALIDATIONS" ]; then
        log_warning "â³ Invalidaciones en progreso: $INVALIDATIONS"
        log_info "Espera unos minutos y vuelve a verificar"
    else
        log_success "âœ… No hay invalidaciones pendientes"
    fi
}

# Ejecutar funciÃ³n principal
main
